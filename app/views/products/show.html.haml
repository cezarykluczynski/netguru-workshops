- if not notice.nil?
  %p#notice= notice
- if not flash[:error].nil?
  %p#error= flash[:error]

%p
  %b Title:
  %span.badge
    = product.title
%p
  %b Description:
  = product.description
%p
  %b Price:
  = product.price

%p
  %b Category:
  = link_to product.category.name, category_path(category)

%h3 Reviews listing
= render :template => "reviews/index"

- if not current_user.nil?
  %h3 Add review
  = render 'reviews/form'

.other-actions
  - if not current_user.nil?
    = link_to 'Edit', edit_category_product_path(category.id, product.id), class: 'button-edit'
  = link_to 'Back', category_products_path, class: 'button-back'
